{
  "name": "metanno",
  "version": "1.0.0-beta.1",
  "description": "Modular annotator building framework in Python",
  "main": "client/index.ts",
  "repository": "https://github.com/percevalw/metanno",
  "author": "Perceval Wajsb√ºrt <perceval.wajsburt@gmail.com>",
  "scripts": {
    "build:react-data-grid": "cd submodules/react-data-grid && jlpm run prepublishOnly; cd ../..",
    "build": "jlpm clean && jlpm build:react-data-grid && jlpm build:jupyter",
    "build:dev": "jlpm clean && jlpm build:react-data-grid && jlpm build:jupyter:dev",
    "build:jupyter": "jupyter labextension build .",
    "build:jupyter:dev": "jupyter labextension build --development True .",
    "clean": "rm -rf pret/ui/metanno/js-extension"
  },
  "license": "Apache-2.0",
  "peerDependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "dependencies": {
    "color": "^4.2.3",
    "konva": "^9.3.18",
    "react-autosuggest": "^10.1.0",
    "react-data-grid": "link:./submodules/react-data-grid",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-fast-compare": "^3.2.2",
    "react-konva": "^17.0.1-3",
    "use-image": "^1.1.4"
  },
  "devDependencies": {
    "@jupyterlab/builder": "^3.6.5",
    "@jupyterlab/galata": "5",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "file-loader": "^6.2.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "old-galata": "npm:@jupyterlab/galata@4.5.8",
    "prettier": "^2.8.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "ts-loader": "^9.4.2",
    "typescript": "^5.8.2"
  },
  "jupyterlab": {
    "extension": "client/plugin.ts",
    "schemaDir": "client/schema",
    "outputDir": "pret/ui/metanno/js-extension",
    "webpackConfig": "./webpack.jupyter.js"
  },
  "prettier": {},
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
