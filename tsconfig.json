{
  "include": ["src"],
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "lib": [
      "es2020",
      "dom",
      "es2021.weakref"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDirs": ["src"],
    "allowJs": true,
    "outDir": "lib",
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "skipLibCheck": true
  }
}