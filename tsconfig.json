{
  "include": ["client"],
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es2020",
      "dom",
      "es2021"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDirs": ["client"],
    "allowJs": true,
    "outDir": "lib",
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "downlevelIteration": true,
    "paths": {
      "react": [ "./node_modules/@types/react" ]
    }
  }
}
